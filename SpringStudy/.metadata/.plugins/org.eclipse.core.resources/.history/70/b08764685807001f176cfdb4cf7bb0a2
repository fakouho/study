<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.db.BoardMapper">
    <select id="bookList" resultType="com.smhrd.model.BookVO">
        SELECT num, title, author, company, isbn, count FROM tbl_book;
    </select>
    
    <insert id="bookInsert" parameterType="com.smhrd.model.BookVO">
        INSERT INTO tbl_book (num, title, author, company, isbn, count)
        VALUES (#{num}, #{title}, #{author}, #{company}, #{isbn}, #{count});
    </insert>

    <!-- 추가 예시: 책 정보 업데이트 -->
    <update id="bookUpdate" parameterType="com.smhrd.model.BookVO">
        UPDATE tbl_book
        SET title = #{title}, author = #{author}, company = #{company}, isbn = #{isbn}, count = #{count}
        WHERE num = #{num};
    </update>

    <!-- 추가 예시: 책 정보 삭제 -->
    <delete id="bookDelete">
        DELETE FROM tbl_book WHERE num = #{num};
    </delete>
</mapper>