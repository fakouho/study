package com.smhrd.myapp.config;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Component;

import com.smhrd.myapp.repo.MemberRepository;

//DB에 있는 데이터로도 인증 가능하게끔 만들어주기 위해서 생성한 클래스
@Component // 스프링컨에티어너에 적재되라고 작성
public class MyuserDetalservice  implements UserDetailsService  {
	
	//DA0 == mapper ==repository
	@Autowired
	private MemberRepository repo;

	// DB에 있는 데이터를 가져와서,security안에 있는 인증된 사용자를 생성
	@Override
	public UserDetails loadUserByUsername(String username) 
			throws UsernameNotFoundException {
		// TODO Auto-generated method stub
		
		// 1. DB에서  username을 기준으로 사용자 정보 조회
		Member findUser=repo.findByUserid(username);
		return null;
	}

}
